<div class="govuk-summary-card">
    <div class="govuk-summary-card__title-wrapper">

        {% if agentStatus === AcspStatus.SUSPENDED %}
            <h2 class="govuk-summary-card__title govuk-!-margin-top-0">
                {{lang.file_as_an_authorised_agent}}
                <strong class="govuk-tag govuk-tag--red govuk-!-margin-top-2">
                    {{lang.cant_file_suspension}}
                </strong>
            </h2>
        {% else %}
            <h2 class="govuk-summary-card__title govuk-!-margin-top-0">
                {{lang.file_as_an_authorised_agent}}
                <strong class="govuk-tag govuk-tag--blue govuk-!-margin-top-2">
                    {{lang.coming_soon}}
                </strong>
            </h2>
        {% endif %}

    </div>
    <div class="govuk-summary-card__content">
        <p class="govuk-body">
            {{lang.in_the_future}}{{companyName}}.
        </p>
        <div class="govuk-inset-text">
            <p class="govuk-body">
                {{lang.authorised_agent_number}}
                <strong>{{agentNumber}}</strong>
            </p>
            <p class="govuk-body">
                {{lang.you_will_need_to_use}}
            </p>
        </div>
    </div>
</div>