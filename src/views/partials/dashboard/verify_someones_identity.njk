<div class="govuk-grid-column-one-third govuk-topic-block">
    {# no link to verify someone's identity when ACSP is suspended #}
    {% if agentStatus === AcspStatus.SUSPENDED %}

        <h3 class="govuk-heading-s">
            {{lang.tell_companies_house_id}}
            <strong class="govuk-tag govuk-tag--red govuk-!-margin-top-2">
                {{lang.not_available}}
            </strong>
        </h3>

        <p class="govuk-body">
            {{lang.you_cannot_tell_us}}{{companyName}}{{lang.has_been_suspended}}
        </p>

    {% elif showTellUsYouveVerifiedAPersonsIdentity %}

        <h3 class="govuk-heading-s">

            {{ lang.verifying_someones_identity }}
        </h3>

        {% set languageFlag = "?lang=cy" if locale == "cy" else 
            "?lang=en" %}

        <p class="govuk-body">
            {{lang.use_our_service_to}}
            <a class="govuk-link govuk-link--no-visited-state" 
            href="{{youHaveVerifiedSomeonesIdentityLink}}{{languageFlag}}"
            >
                {{lang.tell_companies_house_link_text}}
            </a>
        </p>

    {% else %}
        <h3 class="govuk-heading-s">

            {{ lang.verifying_someones_identity }}
        </h3>

        <p class="govuk-body">
            {{lang.use_our_service_to}}

            {{lang.tell_companies_house_link_text}}
        </p>

    {% endif %}
</div>