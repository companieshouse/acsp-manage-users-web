<div class="govuk-grid-column-one-third govuk-topic-block">
    {# no link to verify someone's identity when ACSP is suspended #}
    {% if agentStatus === AcspStatus.SUSPENDED %}

        <h2 class="govuk-heading-s">
            {{lang.tell_companies_house_id}}
            <strong class="govuk-tag govuk-tag--red govuk-!-margin-top-2">
                {{lang.not_available}}
            </strong>
        </h2>

        <p class="govuk-body">
            {{lang.you_cannot_tell_us}}{{companyName}}{{lang.has_been_suspended}}
        </p>

    {% elif showTellUsYouveVerifiedAPersonsIdentity %}

        <h2 class="govuk-heading-s">
        <a class="govuk-link govuk-link--no-underline govuk-link--no-visited-state" 
            href="{{youHaveVerifiedSomeonesIdentityLink}}"
            >
            {{lang.tell_companies_house_id}}
        </a>
        </h2>

        <p class="govuk-body">
            {{lang.from_8_april}}
        </p>

    {% else %}
        <h2 class="govuk-heading-s">
            {{lang.tell_companies_house_id}}
            <strong class="govuk-tag govuk-tag--blue govuk-!-margin-top-2">
                {{lang.coming_soon}}
            </strong>
        </h2>

        <p class="govuk-body">
            {{lang.in_future_youll_be_able_to_tell_us}}
        </p>

    {% endif %}
</div>