{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% extends "layouts/default.njk" %}

{% set bannerHtml %}
  <p class="govuk-notification-banner__heading">
    {{lang.you_have_removed}}
  </p>
{% endset %}

{% set title = lang.what_happens_now_you_have_been_removed + lang.title_end %}

{% block main_content %}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    
    {{ govukNotificationBanner({
        html: bannerHtml,
        type: "success",
        titleText: lang.success
    }) }}

    <h1 class="govuk-heading-l">{{lang.what_happens_now_you_have_been_removed}}</h1>

    <p class="govuk-body">{{lang.you_will_no_longer_be_able_to_access}}.</p>

    {{ govukButton({
        text: lang.go_to_companies_house_services,
        href: buttonHref,
        role: "button",
        classes: 'govuk-!-margin-top-3',
        attributes: {
            "data-event-id": "go-to-companies-house-services"
        }
    }) }}

  </div>
</div>
{% endblock %}